{
    // Vedere https://go.microsoft.com/fwlink/?LinkId=733558 
    // per la documentazione relativa al formato tasks.json
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "gcc build active file",
        "command": "/usr/bin/gcc",
        "args": [
            "-g",
            "${file}",
            "-o",
            "${file}.exe"
        ],
        "options": {
            "cwd": "/usr/bin"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": "build"
    }]
}